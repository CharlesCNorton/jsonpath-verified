#!/usr/bin/env sh
set -eu

ROOT="$(CDPATH= cd -- "$(dirname -- "$0")/.." && pwd)"
cd "$ROOT"

if command -v python3 >/dev/null 2>&1; then
  python3 scripts/check_local_paths.py --staged
elif command -v py >/dev/null 2>&1; then
  py -3 scripts/check_local_paths.py --staged
else
  echo "Python 3 is required for path hygiene pre-commit checks." >&2
  exit 1
fi
